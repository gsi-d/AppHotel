<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="69.5dp"
        android:id="@+id/linearLayout1"
        android:background="@color/material_grey_300">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="51.0dp"
            android:layout_height="match_parent"
            android:id="@+id/imgUser"
            android:layout_gravity="left" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:gravity="right"
            android:layout_marginRight="10px">
            <TextView
                android:text="Usuário:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtUsuario"
                android:textSize="25px"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:textColor="#00008B" />
            <TextView
                android:text="Cargo:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCargo"
                android:textSize="25px"
                android:layout_marginTop="10px"
                android:textColor="#00008B"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayou"
            android:background="#f8f8ff"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/linearLayout4"
                android:background="#f8f8ff"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="80px"
                android:gravity="center_horizontal">
                <ImageButton
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="155.0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgMovimentacoes"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgGastos"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="150.0dp"
                android:id="@+id/linearLayout5"
                android:background="#f8f8ff"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <ImageButton
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="155.0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgCheckIn"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />
                <ImageButton
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="155.0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imgReservas"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="144.5dp"
        android:id="@+id/linearLayout6"
        android:background="#f8f8ff"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layoutRodape"
        android:background="@color/material_grey_300"
        android:gravity="bottom">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_height="match_parent"
            android:id="@+id/imgMov"
            android:layout_gravity="left"
            android:layout_width="43.0dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="15px" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="42.5dp"
            android:id="@+id/linearLayout6"
            android:layout_gravity="center_vertical">

            <TextView
                android:text="Entrada:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtEntrada"
                android:textSize="30px"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="center_vertical"/>
            <TextView
                android:text="Saída:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtSaida"
                android:textSize="30px"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center_vertical"
                android:layout_marginTop="6px" />
        </LinearLayout>
        <TextView
            android:text="Total:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtTotal"
            android:textSize="30px"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="30px"
            android:layout_marginRight="15px" />
    </LinearLayout>
</LinearLayout>


